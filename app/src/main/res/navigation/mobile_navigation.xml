<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/loginRegister">

    <fragment
        android:id="@+id/home"
        android:name="com.example.trackmate.Home"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_to_userProfile"
            app:destination="@id/userProfile" />
        <action
            android:id="@+id/action_home_to_trackNavigation"
            app:destination="@id/trackNavigation" />
    </fragment>
    <fragment
        android:id="@+id/search"
        android:name="com.example.trackmate.Search"
        android:label="Search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_search_to_userProfile2"
            app:destination="@id/userProfile" />
        <action
            android:id="@+id/action_search_to_trackNavigation"
            app:destination="@id/trackNavigation" />
    </fragment>
    <fragment
        android:id="@+id/navigate"
        android:name="com.example.trackmate.Navigate"
        android:label="Navigation"
        tools:layout="@layout/fragment_navigate" >
        <action
            android:id="@+id/action_navigate_to_trackNavigation"
            app:destination="@id/trackNavigation" />
    </fragment>
    <fragment
        android:id="@+id/quests"
        android:name="com.example.trackmate.Quests"
        android:label="Quests"
        tools:layout="@layout/fragment_quests" />
    <fragment
        android:id="@+id/profile"
        android:name="com.example.trackmate.Profile"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profile_to_trackNavigation"
            app:destination="@id/trackNavigation" />
    </fragment>
    <fragment
        android:id="@+id/trackNavigation"
        android:name="com.example.trackmate.TrackNavigation"
        android:label="Navigation"
        tools:layout="@layout/fragment_track_navigation" >
        <argument
            android:name="trackId"
            app:argType="integer"
            android:defaultValue="-1" />
        <action
            android:id="@+id/action_trackNavigation_to_travelGraph"
            app:destination="@id/travelGraph" />
    </fragment>
    <fragment
        android:id="@+id/savedTracks"
        android:name="com.example.trackmate.SavedTracks"
        android:label="Saved Tracks"
        tools:layout="@layout/fragment_saved_tracks" >
        <action
            android:id="@+id/action_savedTracks_to_trackNavigation"
            app:destination="@id/trackNavigation" />
    </fragment>
    <fragment
        android:id="@+id/loginRegister"
        android:name="com.example.trackmate.LoginRegister"
        android:label="Track Mate - Sign In"
        tools:layout="@layout/fragment_login_register" />
    <fragment
        android:id="@+id/settings"
        android:name="com.example.trackmate.Settings"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/profileEdit"
        android:name="com.example.trackmate.ProfileEdit"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_profile_edit" />
    <fragment
        android:id="@+id/userProfile"
        android:name="com.example.trackmate.UserProfile"
        android:label="Profile"
        tools:layout="@layout/fragment_user_profile">
        <argument
            android:name="id"
            app:argType="integer" />
        <action
            android:id="@+id/action_userProfile_to_trackNavigation"
            app:destination="@id/trackNavigation" />
    </fragment>
    <fragment
        android:id="@+id/friends"
        android:name="com.example.trackmate.Friends"
        android:label="Friends"
        tools:layout="@layout/fragment_friends">
        <action
            android:id="@+id/action_friends_to_userProfile"
            app:destination="@id/userProfile" />
    </fragment>
    <fragment
        android:id="@+id/createPost"
        android:name="com.example.trackmate.CreatePost"
        android:label="New Post"
        tools:layout="@layout/fragment_create_post" />
    <fragment
        android:id="@+id/bookmarks"
        android:name="com.example.trackmate.Bookmarks"
        android:label="Saved Posts"
        tools:layout="@layout/fragment_bookmarks" >
        <action
            android:id="@+id/action_bookmarks_to_userProfile"
            app:destination="@id/userProfile" />
        <action
            android:id="@+id/action_bookmarks_to_trackNavigation"
            app:destination="@id/trackNavigation" />
    </fragment>
    <fragment
        android:id="@+id/travels"
        android:name="com.example.trackmate.Travels"
        android:label="Travels History"
        tools:layout="@layout/fragment_travels">
        <action
            android:id="@+id/action_travels_to_trackNavigation"
            app:destination="@id/trackNavigation" />
    </fragment>
    <fragment
        android:id="@+id/travelGraph"
        android:name="com.example.trackmate.TravelGraph"
        android:label="Track Details"
        tools:layout="@layout/fragment_travel_graph">
        <argument
            android:name="trackId"
            android:defaultValue="-1"
            app:argType="integer" />
    </fragment>
</navigation>