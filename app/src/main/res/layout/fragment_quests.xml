<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/level_progress_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/level_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Level"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:id="@+id/level_numbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ProgressBar
                android:id="@+id/level_bar_0"
                style="@android:style/Widget.Material.ProgressBar.Horizontal"
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:layout_marginTop="34dp"
                android:progress="100"
                android:progressTint="@color/primary_500" />

            <TextView
                android:id="@+id/level_number_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle_background_colored"
                android:gravity="center"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:textStyle="bold" />


            <ProgressBar
                android:id="@+id/level_bar_1"
                style="@android:style/Widget.Material.ProgressBar.Horizontal"
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:layout_marginTop="34dp"
                android:progress="0"
                android:progressTint="@color/primary_500" />

            <TextView
                android:id="@+id/level_number_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle_background_gray"
                android:gravity="center"
                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:textStyle="bold" />

            <ProgressBar
                style="@android:style/Widget.Material.ProgressBar.Horizontal"
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:layout_marginTop="34dp"
                android:progress="0"
                android:progressTint="@color/primary_500" />

            <TextView
                android:id="@+id/level_number_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle_background_gray"
                android:gravity="center"
                android:text="3"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:textStyle="bold" />

            <ProgressBar
                style="@android:style/Widget.Material.ProgressBar.Horizontal"
                android:layout_width="50dp"
                android:layout_height="10dp"
                android:layout_marginTop="34dp"
                android:progress="0"
                android:progressTint="@color/primary_500" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progress to next level"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"/>

        <ProgressBar
            android:id="@+id/level_progress_bar"
            android:layout_marginHorizontal="16dp"
            style="@android:style/Widget.Material.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progress="40"
            android:progressTint="@color/primary_500" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/daily_quests_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/level_progress_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/questRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>